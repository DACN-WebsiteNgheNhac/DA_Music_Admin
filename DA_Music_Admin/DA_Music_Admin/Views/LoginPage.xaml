<Window
    x:Class="DA_Music_Admin.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Interaction="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:DA_Music_Admin.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    x:Name="Window"
    Title="Đăng nhâp"
    Width="800"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Montserrat"
    ResizeMode="NoResize"
    SnapsToDevicePixels="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">


    <Window.Resources>
        <LinearGradientBrush x:Key="gradientColor_1" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStopCollection>
                <GradientStop Offset="0" Color="#7985ff" />
                <GradientStop Offset="1" Color="{DynamicResource ColorIconColor}" />
            </GradientStopCollection>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="gradientColor_3" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStopCollection>
                <GradientStop Offset="0" Color="#9085fa" />
                <GradientStop Offset="1" Color="{DynamicResource ColorIconColor}" />
            </GradientStopCollection>
        </LinearGradientBrush>

        <Style x:Key="RotateViewBox" TargetType="Viewbox">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                RepeatBehavior="Forever"
                                Storyboard.TargetProperty="RenderTransform.(RotateTransform.Angle)"
                                To="360"
                                Duration="0:0:20" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <sys:Double x:Key="WidthIcon">100</sys:Double>
        <sys:Double x:Key="HeightIcon">100</sys:Double>

    </Window.Resources>

    <Grid>
        <Image
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ClipToBounds="True"
            Source="/Resources/bg.jpg"
            Stretch="UniformToFill" />

        <Border CornerRadius="12" Opacity="0.85">
            <Border BorderThickness="2" CornerRadius="10">

                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#462AD8" />
                        <GradientStop Offset="0.75" Color="#DA34AE" />
                        <GradientStop Offset="1" Color="{DynamicResource ColorIconColor}" />
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Offset="0" Color="#060531" />
                        <GradientStop Offset="1" Color="#1B1448" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            x:Name="title"
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FocusVisualStyle="{x:Null}"
                            Focusable="False"
                            FontFamily="Montserrat"
                            FontSize="10"
                            Foreground="DarkGray"
                            Text="Đăng nhập">
                            <Interaction:Interaction.Triggers>
                                <Interaction:EventTrigger EventName="MouseDown">
                                    <Interaction:InvokeCommandAction Command="{Binding Window_MouseDown}" CommandParameter="{Binding ElementName=title}" />
                                </Interaction:EventTrigger>

                            </Interaction:Interaction.Triggers>
                        </TextBlock>


                        <Button
                            Grid.Column="1"
                            Width="20"
                            Height="20"
                            Background="#28AEED"
                            BorderBrush="#28AEED"
                            Click="Minimize"
                            FocusVisualStyle="{x:Null}"
                            Focusable="False"
                            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
                            <materialDesign:PackIcon
                                Width="15"
                                Height="15"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Kind="Minimize" />
                        </Button>

                        <Button
                            Grid.Column="2"
                            Width="20"
                            Height="20"
                            Background="#DA34AE"
                            BorderBrush="#DA34AE"
                            Click="Close"
                            FocusVisualStyle="{x:Null}"
                            Focusable="False"
                            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
                            <materialDesign:PackIcon
                                Width="15"
                                Height="15"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Kind="Close" />
                        </Button>


                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="1"
                            Width="220"
                            Margin="0,35,0,0"
                            Orientation="Vertical">

