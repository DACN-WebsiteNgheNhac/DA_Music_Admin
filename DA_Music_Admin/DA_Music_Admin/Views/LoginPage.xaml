                            <TextBlock
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                FocusVisualStyle="{x:Null}"
                                Focusable="False"
                                FontFamily="Montserrat"
                                FontSize="23"
                                FontWeight="Medium"
                                Foreground="White"
                                Text="Website âm nhạc"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Margin="0,5,0,0"
                                FocusVisualStyle="{x:Null}"
                                Focusable="False"
                                FontFamily="Montserrat"
                                FontSize="12"
                                FontWeight="Medium"
                                Foreground="LightGray"
                                Text="Chào mừng bạn đã đến với chúng tôi."
                                TextAlignment="Center"
                                TextWrapping="Wrap" />


                            <TextBox
                                x:Name="txtUsername"
                                Margin="0,40,0,0"
                                materialDesign:HintAssist.Hint="Tên đăng nhập"
                                CaretBrush="{DynamicResource IconColor}"
                                FontSize="{StaticResource SmallTextSize}"
                                Foreground="{DynamicResource ForegroundColor}"
                                SnapsToDevicePixels="True"
                                Style="{StaticResource CustomHintTextBox}" />

                            <PasswordBox
                                x:Name="txtPass"
                                Margin="0,20,0,0"
                                materialDesign:HintAssist.Hint="Mật khẩu"
                                CaretBrush="{DynamicResource IconColor}"
                                FontSize="{DynamicResource SmallTextSize}"
                                Foreground="{DynamicResource ForegroundColor}"
                                SnapsToDevicePixels="True"
                                Style="{StaticResource CustomHintPasswordBox}" />


                            <Button
                                Width="150"
                                Height="40"
                                Margin="0,30,0,0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                materialDesign:ButtonAssist.CornerRadius="12"
                                BorderThickness="0"
                                Click="Login"
                                Content="ĐĂNG NHẬP"
                                Cursor="Hand"
                                FocusVisualStyle="{x:Null}"
                                Focusable="False"
                                FontFamily="Montserrat"
                                FontSize="{StaticResource SmallTextSize}"
                                Foreground="{DynamicResource ForegroundColor}"
                                IsDefault="True">

                                <Button.Style>
                                    <Style BasedOn="{StaticResource MaterialDesignFlatAccentButton}" TargetType="Button">
                                        <Setter Property="Background" Value="{DynamicResource gradientColor_1}" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource gradientColor_3}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                        </StackPanel>

                        <StackPanel
                            x:Name="LoadingIndicator"
                            Grid.Column="2"
                            Margin="10"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal"
                            Visibility="Hidden">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{StaticResource TextSizeError}"
                                Foreground="{DynamicResource ForegroundColor}"
                                Text="Đang tải" />
                            <ProgressBar
                                Margin="5,0,0,0"
                                Foreground="{DynamicResource ForegroundColor}"
                                IsIndeterminate="True"
                                Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Value="0" />
                        </StackPanel>

