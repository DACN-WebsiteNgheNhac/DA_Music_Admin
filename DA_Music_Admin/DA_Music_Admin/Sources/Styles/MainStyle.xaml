<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:materialDesign ="http://materialdesigninxaml.net/winfx/xaml/themes"
                    >

    <sys:Int32 x:Key="FPS">120</sys:Int32>


    <SolidColorBrush x:Key="HoveredBackgroundColorButtonMenu" Color="#393243"/>

    <Style
        
        x:Key="rbtn_Menu"
        TargetType="RadioButton"
        >

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <ControlTemplate.Resources>
                        <sys:Double x:Key="Height">200</sys:Double>
                    </ControlTemplate.Resources>
                    <Border
                        
                        x:Name="border"
                        BorderBrush="#9b4de0"
                        >
                        <ContentPresenter x:Name="Content" SnapsToDevicePixels="True" Height="{Binding ElementName=container, Path=Height}" />

                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="{StaticResource HoveredBackgroundColorButtonMenu}" TargetName="border" />
                            
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard Timeline.DesiredFrameRate="{StaticResource FPS}">
                                        <ThicknessAnimation  Duration="0:0:0.075"
                                                             Storyboard.TargetProperty="BorderThickness"
                                                             Storyboard.TargetName="border"
                                                             To="3 0 0 0"
                                                             >
                                            <ThicknessAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut"/>
                                            </ThicknessAnimation.EasingFunction>
                                        </ThicknessAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard Timeline.DesiredFrameRate="{StaticResource FPS}">
                                        <ThicknessAnimation  Duration="0:0:0.075"
                                                             Storyboard.TargetProperty="BorderThickness"
                                                             Storyboard.TargetName="border"
                                                             To="0"
                                                             >
                                            <ThicknessAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseIn"/>
                                            </ThicknessAnimation.EasingFunction>
                                        </ThicknessAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            
                        </Trigger>
                        
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource HoveredBackgroundColorButtonMenu}" TargetName="border" />
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>

            </Setter.Value>

        </Setter>

    </Style>

