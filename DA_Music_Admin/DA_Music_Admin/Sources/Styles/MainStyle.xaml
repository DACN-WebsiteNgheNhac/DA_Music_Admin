    <Style
        
        x:Key="IconUser"
        TargetType="Ellipse"
        
        >

        <Style.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                                Duration="0:0:0.1"
                                Storyboard.TargetProperty="Width"
                                To="45"
                                />

                    </Storyboard>
                </BeginStoryboard>

                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                                Duration="0:0:0.1"
                                Storyboard.TargetProperty="Height"
                                To="45"
                                />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>

            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation  
                            Duration="0:0:0.1"
                            Storyboard.TargetProperty="Width"
                            To="40"
                            />
                    </Storyboard>
                </BeginStoryboard>
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Duration="0:0:0.1"
                            Storyboard.TargetProperty="Height"
                            To="40"
                            />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

